digraph ReachabilityGraph {
    rankdir=TB;
    node [fontname="Arial", shape=box, style=rounded];
    edge [fontname="Arial"];
    labelloc="t";
    label="Deadlock Detection - Reachability";

    // Markings
    "M0" [label="M0 (initial)\n{p1:1, p2:0, p3:0}", style=filled, fillcolor="lightblue"];
    "M1" [label="M1\n{p1:0, p2:1, p3:0}", style=filled, fillcolor="white"];
    "M2" [label="M2 (deadlock)\n{p1:0, p2:0, p3:1}", style=filled, fillcolor="lightcoral"];

    // Transitions
    "M0" -> "M1" [label="t1"];
    "M1" -> "M2" [label="t2"];
}